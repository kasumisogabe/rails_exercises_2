<h1>ブログ一覧</h1>

<p><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
        <td><%= link_to 'ブログを編集する', edit_blog_path(blog.id) %></td>
        <td><%= link_to 'ブログを削除する', blog, method: :delete, data: { confirm: '本当に削除してもいいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しくブログを投稿する', new_blog_path %>
